{
  "name": "cinny-electron",
  "private": true,
  "version": "0.1.0",
  "description": "Electron wrapper around Cinny, Yet another matrix client",
  "main": "./out/main/index.js",
  "author": "Enova",
  "type": "module",
  "homepage": "https://github.com/Enovale/cinny-electron",
  "packageManager": "pnpm@10.20.0",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck": "tsc --noEmit -p tsconfig.json --composite false",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "build": "pnpm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "pnpm run build && electron-builder --dir",
    "build:win": "pnpm run build && electron-builder --win",
    "build:mac": "pnpm run build && electron-builder --mac",
    "build:linux": "pnpm run build && electron-builder --linux"
  },
  "dependencies": {
    "@cinny-electron/core": "workspace:*",
    "@cinny-electron/types": "workspace:*",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "electron-conf": "^1.3.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.1.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "electron": "^38.1.2",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.1",
    "eslint": "catalog:dev",
    "prettier": "catalog:dev",
    "typescript": "catalog:dev",
    "vite": "^7.1.6",
    "vite-tsconfig-paths": "6.0.0-beta.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "electron",
      "esbuild"
    ]
  }
}
